      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="comboBoxAuthor" prefWidth="250.0" />
            <TextField fx:id="royaltyTextField" promptText="0.00000" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#onSaveClick" prefWidth="100.0" text="Save" />
